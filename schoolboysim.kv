<MainMenu>:
	GridLayout:
		rows: 2

		BoxLayout:
			Image:
				source: "logo.png"

		BoxLayout:
			orientation: 'vertical'

			AnchorLayout:
				anchor_y: 'center'
				anchor_x: 'center'
				MDFillRoundFlatButton:
					font_name: 'ubuntu.ttf'
					font_size: "8sp"
					size_hint: (.5, .5)
					text: "Новая игра"

			AnchorLayout:
				anchor_y: 'center'
				anchor_x: 'center'
				MDFillRoundFlatButton:
					font_name: 'ubuntu.ttf'
					font_size: "8sp"
					size_hint: (.5, .5)
					text: "Загрузить игру"

			AnchorLayout:
				anchor_y: 'center'
				anchor_x: 'center'
				MDFillRoundFlatButton:
					font_name: 'ubuntu.ttf'
					font_size: "8sp"
					size_hint: (.5, .5)
					text: "Инфо"

					on_release:
						root.manager.transition.direction = 'left'
						root.manager.current = "Info"
			AnchorLayout:
				Widget:

<InfoPage>:
	AnchorLayout:
		anchor_y: 'top'
		MDLabel:
			valign: "top"
			halign: "center"
			text: "Исходный код игры доступен по ссылке:\nhttps://clck.ru/Syxha\nАвтор: Telegram @RubyHunter"
			size_hint: (1, 1)
			size: (1, 1)

	AnchorLayout:
		padding: [0, 0, 0, 30]
		anchor_y: 'bottom'
		MDFillRoundFlatButton:
			font_name: 'ubuntu.ttf'
			font_size: "8sp"
			size_hint: (.45, .07)
			text: "Назад в меню"

			on_release:
				root.manager.transition.direction = 'right'
				root.manager.current = 'Menu'
